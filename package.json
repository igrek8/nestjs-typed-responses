{
  "name": "nestjs-typed-responses",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Igor Korchagin (https://github.com/igrek8)",
  "keywords": [
    "api",
    "nest.js",
    "open-api"
  ],
  "description": "Enables OpenAPI v3 polymorphism using `__type` metafield to resolve different exceptions or responses within the same HTTP code response group",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/igrek8/nestjs-typed-responses#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/igrek8/nestjs-typed-responses"
  },
  "bugs": {
    "url": "https://github.com/igrek8/nestjs-typed-responses/issues"
  },
  "files": [
    "./dist"
  ],
  "prettier": "@igrek8/prettier",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@igrek8/semantic-release"
  },
  "jest": {
    "preset": "@igrek8/jest",
    "rootDir": "src"
  },
  "eslintConfig": {
    "extends": "@igrek8/eslint-config",
    "env": {
      "node": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "tslib": "^2",
    "class-transformer": "^0",
    "class-validator": "^0"
  },
  "peerDependencies": {
    "@nestjs/common": "^9",
    "@nestjs/core": "^9",
    "@nestjs/platform-express": "^9",
    "@nestjs/swagger": "^6"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "compile": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run compile",
    "lint": "eslint \"**/*\"",
    "format": "prettier --check \"**/*\"",
    "docs": "typedoc build -o docs && typedoc publish -o docs"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@igrek8/eslint-config": "1.0.6",
    "@igrek8/jest": "1.0.1",
    "@igrek8/prettier": "1.0.1",
    "@igrek8/semantic-release": "1.0.2",
    "@igrek8/typescript": "1.0.1",
    "@igrek8/typedoc": "1.1.0",
    "@types/node": "18.14.2",
    "husky": "8.0.3",
    "rimraf": "4.1.2",
    "ts-node": "10.9.1",
    "@nestjs/common": "9.3.9",
    "@nestjs/core": "9.3.9",
    "@nestjs/platform-express": "9.3.9",
    "@nestjs/swagger": "6.2.1",
    "@nestjs/testing": "9.3.9",
    "@types/express": "4.17.17",
    "@types/supertest": "2.0.12",
    "supertest": "6.3.3",
    "utility-types": "3.10.0",
    "tslib": "2.5.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0"
  }
}
